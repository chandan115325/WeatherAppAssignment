
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chandan.android.weatherappassignment.fragments.WeatherConditionFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/day"
        android:id="@+id/dayTextView"
        android:textColor="@color/light_text"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:typeface="serif"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="10dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon_na"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dayTextView"
        android:layout_marginTop="50dp"
        android:id="@+id/weatherIconImageView"
        android:contentDescription="@string/condition_icon"
        android:adjustViewBounds="true" />


    <!----> />
</RelativeLayout>
